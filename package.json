{
  "name": "@cherrywind/root",
  "private": false,
  "scripts": {
    "dev": "turbo run dev --filter=@/packages/*",
    "build": "turbo run build",
    "check-types": "turbo run check-types --filter=@/packages/*",
    "test:workspace": "turbo run test",
    "test:workspace:watch": "turbo run test --watch",
    "lint": "turbo run lint",
    "format": "prettier --write packages/**  --config ./.prettierrc.cjs",
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "husky",
    "release": "changeset publish"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@vueuse/core": "^11.0.3",
    "axios": "^1.7.7",
    "element-plus": "^2.8.1",
    "lodash-es": "^4.17.21",
    "pinia": "^2.2.2",
    "vite-plugin-dts": "^4.5.3",
    "vue": "^3.5.13",
    "vue-i18n": "^9.14.0",
    "vue-router": "^4.5.0"
  },
  "lint-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": [
      "prettier --write",
      "eslint --fix --ignore-path .eslintignore"
    ],
    "{!(package)*.json,*.code-snippets,.!(browserslist)*rc}": [
      "prettier --write--parser json"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.24.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/tsconfig": "^0.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-oxlint": "^0.16.7",
    "eslint-plugin-turbo": "^2.5.0",
    "eslint-plugin-vue": "^10.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "jsencrypt": "^3.3.2",
    "less": "^4.2.0",
    "less-loader": "^12.2.0",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "oxlint": "^0.16.7",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.10",
    "turbo": "^2.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.0",
    "vite": "^6.2.4",
    "vitest": "^3.1.1"
  },
  "packageManager": "pnpm@8.15.6"
}